{
  "name": "fullstack-react-serverless",
  "version": "0.1.0",
  "repository": "https://github.com/tim-stasse/fullstack-react-serverless.git",
  "author": "Tim Stasse <tjstasse@agiledigital.com.au>",
  "license": "MIT",
  "devDependencies": {
    "@playlyfe/gql": "^2.6.1",
    "cross-env": "^5.2.0",
    "eslint": "5.6.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.0",
    "npm-run-all": "^4.1.5",
    "prettier-eslint-cli": "^4.7.1"
  },
  "scripts": {
    "audit-all": "run-p audit-all-*",
    "audit-all-admin": "cd ./admin && yarn audit",
    "audit-all-client": "cd ./client && yarn audit",
    "audit-all-self": "yarn audit",
    "audit-all-server": "cd ./server && yarn audit",
    "build-all": "run-p build-all-*",
    "build-all-admin": "cd ./admin && yarn build",
    "build-all-client": "cd ./client && yarn build",
    "build-all-server": "cd ./server && yarn package",
    "install-all": "yarn install && run-p install-all-*",
    "install-all-admin": "cd ./admin && yarn install",
    "install-all-client": "cd ./client && yarn install",
    "install-all-server": "cd ./server && yarn install",
    "lint-staged": "lint-staged",
    "start-all": "run-p start-all-*",
    "start-all-admin": "cd ./admin && yarn start",
    "start-all-client": "cd ./client && yarn start",
    "start-all-server": "cd ./server && yarn start",
    "test-all": "run-p test-all-*",
    "test-all-admin": "cd ./admin && yarn test",
    "test-all-client": "cd ./client && yarn test"
  }
}
